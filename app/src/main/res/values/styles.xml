<resources>

    <!-- Base application theme. -->
    <style name="BaseTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorBackground</item>
        <item name="colorSecondary">@color/colorSecondary</item>

        <item name="colorError">@color/colorError</item>
        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="colorSurface">@color/colorSurface</item>

        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>
        <item name="colorOnBackground">@color/colorOnBackground</item>
        <item name="colorOnSurface">@color/colorOnSurface</item>
        <item name="colorOnError">@color/colorOnError</item>
        
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.Splitch.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.Splitch.MediumComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.Splitch.LargeComponent</item>

        <item name="bottomAppBarStyle">@style/Widget.MaterialComponents.BottomAppBar.PrimarySurface</item>
        <item name="textInputStyle">@style/Widget.MaterialComponents.TextInputLayout.FilledBox</item>
        <item name="materialButtonStyle">@style/Widget.Splitch.Button.TextButton.Dialog</item>
        <item name="appBarLayoutStyle">@style/Widget.MaterialComponents.AppBarLayout.Surface</item>
        <item name="bottomSheetDialogTheme">@style/ThemeOverlay.Splitch.BottomSheetDialog</item>
        <item name="chipStyle">@style/Widget.MaterialComponents.Chip.Choice</item>
        <item name="materialCardViewStyle">@style/Widget.MaterialComponents.CardView</item>

        <item name="textAppearanceOverline">@style/TextAppearance.Splitch.Overline</item>
        <item name="textAppearanceBody1">@style/TextAppearance.Splitch.Body1</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.Splitch.Headline5</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.Splitch.Headline6</item>

        <item name="preferenceTheme">@style/YourTheme.PreferenceThemeOverlay</item>

    </style>

    <style name="AppTheme" parent="BaseTheme">

    </style>

    <style name="AppTheme.Launcher">
        <item name="android:windowBackground">@drawable/launch_screen</item>
    </style>
    
    <style name="ShapeAppearance.Splitch.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="ShapeAppearance.Splitch.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

    <style name="ShapeAppearance.Splitch.LargeComponent" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="TextAppearance.Splitch.Overline" parent="TextAppearance.MaterialComponents.Overline">
        <item name="android:textSize">10sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:alpha">0.6</item>
        <item name="alpha">0.6</item>
    </style>

    <style name="TextAppearance.Splitch.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.Splitch.Headline5" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextAppearance.Splitch.Headline6" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Widget.Splitch.Button.OutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="iconPadding">0dp</item>
        <item name="android:paddingLeft">6dp</item>
        <item name="android:paddingRight">6dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="strokeWidth">0dp</item>
    </style>

    <style name="Widget.Splitch.Button.TextButton.Dialog" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ThemeOverlay.Splitch.BottomSheetDialog" parent="ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="Widget.Splitch.CompoundButton.RadioButton.Purple" parent="Widget.MaterialComponents.CompoundButton.RadioButton">
        <item name="buttonTint">@color/material_purple</item>
    </style>

    <style name="Widget.Splitch.CompoundButton.RadioButton.Red" parent="Widget.MaterialComponents.CompoundButton.RadioButton">
        <item name="buttonTint">@color/material_red</item>
    </style>

    <style name="Widget.Splitch.CompoundButton.RadioButton.Pink" parent="Widget.MaterialComponents.CompoundButton.RadioButton">
        <item name="buttonTint">@color/material_pink</item>
    </style>

    <style name="Widget.Splitch.CompoundButton.RadioButton.Indigo" parent="Widget.MaterialComponents.CompoundButton.RadioButton">
        <item name="buttonTint">@color/material_indigo</item>
    </style>

    <style name="Widget.Splitch.CompoundButton.RadioButton.LightBlue" parent="Widget.MaterialComponents.CompoundButton.RadioButton">
        <item name="buttonTint">@color/material_light_blue</item>
    </style>

    <style name="YourTheme.PreferenceThemeOverlay" parent="@style/PreferenceThemeOverlay">
        <item name="android:layout">@layout/fragment_settings_preferences</item>
    </style>

</resources>
